<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MoviesMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MoviesMauiApp"
    xmlns:views="clr-namespace:MoviesMauiApp.Views"
    Title="MoviesMauiApp">

    <TabBar>
        <Tab Title="Movies">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="Favourites">
            <ShellContent ContentTemplate="{DataTemplate views:FavouritesPage}" Route="FavouritesPage"/>
        </Tab>
        <Tab Title="History">
            <ShellContent ContentTemplate="{DataTemplate views:HistoryPage}" Route="HistoryPage"/>
        </Tab>
        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" Route="SettingsPage"/>
        </Tab>
    </TabBar>

</Shell>
