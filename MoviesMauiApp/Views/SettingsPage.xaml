<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MoviesMauiApp.ViewModels"
             x:Class="MoviesMauiApp.Views.SettingsPage"
             Title="{Binding Title}">

    <VerticalStackLayout Spacing="20" Padding="20">
        
        <Label Text="Appearance" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
        
        <Grid ColumnDefinitions="*, Auto">
            <Label Text="Dark Mode" VerticalOptions="Center"/>
            <Switch IsToggled="{Binding IsDarkMode}" Grid.Column="1"/>
        </Grid>

        <BoxView HeightRequest="1" Color="LightGray"/>

        <Label Text="Accessibility" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
        
        <Label Text="Font Size Scaling"/>
        <Slider Value="{Binding FontSize}" Minimum="12" Maximum="32"/>
        <Label Text="{Binding FontSize, StringFormat='Current Size: {0:F0}'}" HorizontalOptions="Center"/>

        <BoxView HeightRequest="1" Color="LightGray"/>

        <Button Text="Reset Data (Example)" 
                Command="{Binding ResetDataCommand}"
                BackgroundColor="Red" TextColor="White"
                Margin="0,20,0,0"/>

    </VerticalStackLayout>

</ContentPage>
